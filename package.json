{
  "name": "saeae",
  "productName": "Saeae",
  "version": "0.8.0-beta",
  "author": {
    "name": "Fraasi",
    "email": "fraasi.gh@gmail.com",
    "url": "https://github.com/fraasi)"
  },
  "description": "Weather app in your tray",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint src --color"
  },
  "keywords": [
    "weather",
    "sää",
    "saeae",
    "tray",
    "temperature",
    "sun",
    "moon"
  ],
  "license": "MIT",
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "npm",
        "asar": true,
        "icon": "./src/assets/fraasi-64x64.ico"
      },
      "electronWinstallerConfig": {
        "name": "saeae"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "saeae"
      }
    }
  },
  "private": true,
  "homepage": "https://github.com/fraasi/saeae",
  "bugs": "https://github.com/fraasi/saeae/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/fraasi/saeae.git"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "electron-compile": "^6.4.3",
    "electron-positioner": "^4.1.0",
    "electron-prompt": "^1.3.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^2.0.0",
    "futility": "github:fraasi/futility",
    "node-fetch": "^2.3.0",
    "suncalc": "^1.8.0"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.3",
    "electron-prebuilt-compile": "3.0.10",
    "eslint": "^5.10.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.10.0",
    "semver": "^5.6.0"
  }
}
