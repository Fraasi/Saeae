{
	"name": "saeae",
	"productName": "Saeae",
	"version": "1.0.0",
	"author": {
		"name": "Fraasi",
		"email": "fraasi.gh@gmail.com",
		"url": "https://github.com/fraasi"
	},
	"description": "Weather app in your tray",
	"main": "src/main.js",
	"private": true,
	"license": "MIT",
	"homepage": "https://github.com/fraasi/saeae",
	"bugs": "https://github.com/fraasi/saeae/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/fraasi/saeae.git"
	},
	"keywords": [
		"weather",
		"sää",
		"saeae",
		"tray",
		"temperature",
		"sun",
		"moon"
	],
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint src --color",
		"test": "npm run lint",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder --windows",
		"release": "np"
	},
	"dependencies": {
		"electron-context-menu": "^2.0.1",
		"electron-debug": "^3.0.1",
		"electron-prompt": "^1.5.1",
		"electron-store": "^5.1.0",
		"electron-unhandled": "^3.0.0",
		"electron-updater": "^4.0.6",
		"electron-util": "^0.14.1",
		"futility": "github:fraasi/futility",
		"node-fetch": "^2.3.0",
		"suncalc": "^1.8.0"
	},
	"devDependencies": {
		"electron": "^8.2.5",
		"electron-builder": "^22.6.0",
		"eslint": "^7.0.0",
		"np": "^6.2.3"
	},
	"np": {
		"publish": false,
		"releaseDraft": false
	},
	"build": {
		"appId": "electron.saeae",
		"directories": {
			"output": "dist"
		},
		"icon": "src/images/fraasi-256x256.png",
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				},
				{
					"target": "portable",
					"arch": [
						"x64"
					]
				}
			]
		},
		"mac": {
			"category": "public.app-category.social-networking",
			"darkModeSupport": true
		},
		"dmg": {
			"iconSize": 160,
			"contents": [
				{
					"x": 180,
					"y": 170
				},
				{
					"x": 480,
					"y": 170,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Network;Chat"
		}
	}
}
