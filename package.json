{
	"name": "saeae",
	"productName": "Saeae",
	"version": "1.2.3-beta",
	"author": {
		"name": "Fraasi",
		"email": "fraasi.gh@gmail.com",
		"url": "https://github.com/fraasi"
	},
	"description": "Weather app in your tray",
	"main": "src/main.js",
	"private": true,
	"license": "MIT",
	"homepage": "https://github.com/fraasi/saeae",
	"bugs": "https://github.com/fraasi/saeae/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/fraasi/saeae.git"
	},
	"keywords": [
		"sää",
		"saeae",
		"electron",
		"weather",
		"app",
		"tray",
		"temperature",
		"sun",
		"moon"
	],
	"scripts": {
		"postinstall": "electron-builder install-app-deps",
		"lint": "eslint src --color",
		"start": "electron .",
		"pack": "electron-builder --dir",
		"dist": "electron-builder"
	},
	"dependencies": {
		"custom-electron-titlebar": "^3.2.5",
		"electron-context-menu": "^2.3.0",
		"electron-debug": "^3.1.0",
		"electron-prompt": "^1.6.0",
		"electron-store": "^6.0.1",
		"electron-traywindow-positioner": "^1.1.0",
		"electron-util": "^0.14.2",
		"futility": "github:fraasi/futility",
		"node-fetch": "^2.6.1",
		"suncalc": "^1.8.0"
	},
	"devDependencies": {
		"electron": "^9.4.0",
		"electron-builder": "^22.9.1",
		"eslint": "^7.15.0"
	},
	"build": {
		"appId": "com.${name}.saeae",
		"copyright": "Copyright © 2020 ${author}",
		"files": [
			"src/",
			"env.js",
			"node_modules/",
			"package.json"
		],
		"directories": {
			"output": "dist"
		},
		"win": {
			"icon": "src/images/fraasi-256x256.png",
			"target": [ "portable", "nsis" ]
		},
		"portable": {
			"artifactName": "${productName}-v${version}-${os}-${arch}-portable.${ext}",
			"arch": [ "x64" ]
		},
		"nsis": {
			"artifactName": "${productName}-v${version}-${os}-${arch}-Setup.${ext}",
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"license": "LICENSE.txt",
			"installerIcon": "src/images/fraasi-256x256.png",
			"uninstallerIcon": "src/images/fraasi-256x256.png",
			"arch": [ "x64" ]
		},
		"linux": {
			"artifactName": "${productName}-v${version}-${os}-${arch}.${ext}",
			"icon": "build/icons/fraasi-256x256.png",
			"target": [
				"AppImage",
				"deb"
			],
			"category": "Utility"
		}
	}
}
